<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginVertical="5dp"
    android:descendantFocusability="beforeDescendants"
    app:cardElevation="1dp"
    android:animateLayoutChanges="true"
    android:nestedScrollingEnabled="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="true"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/imagesPager"
            android:layout_marginBottom="-10dp"
            android:background="@color/colorHintText"
            android:nestedScrollingEnabled="true"


            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:background="@color/colorBackground"
            android:layout_gravity="bottom"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:animateLayoutChanges="true"
            android:descendantFocusability="beforeDescendants"
            app:cardCornerRadius="10dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:textSize="14sp"
                    android:paddingHorizontal="20dp"
                    android:paddingTop="10dp"
                    android:textIsSelectable="true"
                    android:elevation="10dp"
                    android:textColor="@color/colorText"

                    android:autoLink="all"
                    android:textColorLink="@color/colorAccent"
                    android:id="@+id/textView"
                    android:text="⚡️ffffffffff
Теперь ее обязан рассмотреть президент. На это у Зеленского – 90 дней."
                    android:fontFamily="@font/golos_regular"
                    android:layout_height="wrap_content"/>

                <LinearLayout
                    android:id="@+id/viewsContainer"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="20dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_views"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textSize="12sp"
                        android:paddingHorizontal="8dp"

                        android:id="@+id/viewCount"
                        android:text="11111"
                        android:textColor="@color/colorHintText"
                        android:fontFamily="@font/golos_regular"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="right">
                        <TextView
                            android:layout_width="wrap_content"


                            android:textSize="14sp"
                            android:paddingHorizontal="12dp"
                            android:gravity="right"
                            android:id="@+id/readMore"
                            android:text="@string/read_more"
                            android:paddingVertical="5dp"

                            android:background="@drawable/edittext"
                            android:textColor="@color/colorHintText"
                            android:fontFamily="@font/golos_medium"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="bottom"
                    android:paddingHorizontal="10dp"

                    android:paddingVertical="5dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/channelAvatar"
                            android:layout_width="50dp"
                            android:padding="6dp"
                            android:src="@mipmap/ic_main_round"
                            android:layout_height="50dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical"

                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/channelNameView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="14sp"
                                android:maxLength="20"
                                android:maxLines="1"
                                android:fontFamily="@font/golos_medium"
                                android:text="Топор Live"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:maxLength="25"
                                android:id="@+id/dateView"
                                android:fontFamily="@font/golos_regular"
                                android:text="12 июня в 12:00"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginVertical="5dp"
                        android:background="@drawable/action_box"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:onClick="odd2"

                        android:layout_height="match_parent">
                        <LinearLayout
                            android:id="@+id/commentsBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"

                            android:paddingHorizontal="8dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"

                                android:src="@drawable/ic_comments"/>
                            <TextView
                                android:id="@+id/commentsCountView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:maxLines="1"
                                android:textColor="@color/colorHintText"
                                android:layout_margin="10dp"

                                android:fontFamily="@font/golos_medium"
                                android:text="125"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/share"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:paddingHorizontal="8dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="25dp"
                                android:layout_height="25dp"

                                android:src="@drawable/ic_repost"/>


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <TextView
        android:id="@+id/mediaCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:visibility="gone"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/cover"
        android:textColor="@color/colorWhiteText"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:fontFamily="@font/golos_medium"
        android:text="1 из 2"/>


</androidx.cardview.widget.CardView>